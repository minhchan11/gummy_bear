@{
    ViewData["Title"] = "Edit " + @Model.name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GummyBearKingdom.Models.Gummy

<div class="panel panel-success">
    <div class="panel-heading">Detail</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.id)
            <div class="form-group">
                <label>Name:</label>
                <h4> @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })</h4>

                <label>Cost:</label>
                <h4> @Html.EditorFor(model => model.cost, new { htmlAttributes = new { @class = "form-control" } })</h4>
                <label>Origin:</label>
                <h4> @Html.EditorFor(model => model.origin, new { htmlAttributes = new { @class = "form-control" } })</h4>
                <input type="submit" class="btn btn-success" value="Save Edit">
            </div>
        }
    </div>
</div>
