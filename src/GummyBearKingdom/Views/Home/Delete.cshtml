@{
  ViewData["Title"] = "Delete "+ @Model.name;
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GummyBearKingdom.Models.Gummy

<h5>Confirm deletion for @Model.name</h5>
<div class="well">
  <h4>Name: @Html.DisplayFor(model => model.name)</h4>
  <h4>Cost: $ @Html.DisplayFor(model => model.cost)</h4>
  <h4>Country of Origin: @Html.DisplayFor(model => model.origin)</h4>
</div>
@using (Html.BeginForm())
{
  <input type="submit" class="btn btn-danger" value="Delete">
}
