@{
  ViewData["Title"] = "Add a new Gummy Bear";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GummyBearKingdom.Models.Gummy

@using (Html.BeginForm())
{
   <div class="form-group">
       <label>New Name:</label>
       @Html.TextBoxFor(model => model.name, new { @class = "form-control" })
   </div>
  
  <div class="form-group">
      <label>New Cost:</label>
      @Html.TextBoxFor(model => model.cost, new { @class = "form-control" })
  </div>
<div class="form-group">
    <label>New Country of Origin:</label>
    @Html.TextBoxFor(model => model.origin, new { @class = "form-control" })
</div>
  <input type="submit" class="btn btn-primary" value="Add new Gummy!">
}
